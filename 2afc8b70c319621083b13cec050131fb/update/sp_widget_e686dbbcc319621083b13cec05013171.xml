        <client_script><![CDATA[api.controller = function($scope, $http, spUtil) {
  var c = this;
  c.form = {};

  c.register = function() {
    if (!c.form.email || !c.form.password || !c.form.first_name || !c.form.last_name) {
      spUtil.addErrorMessage("All required fields must be filled.");
      return;
    }

    var payload = {
      first_name: c.form.first_name,
      last_name: c.form.last_name,
      email: c.form.email,
      password: c.form.password,
      gender: c.form.gender || '',
      userdata: ''
    };

    $http.post('/api/now/table/x_1606464_juanid_juanid_user', payload).then(function success(response) {
      spUtil.addInfoMessage("✅ Registration successful!");
      c.form = {};
    }, function error(response) {
      spUtil.addErrorMessage("❌ Registration failed: " + (response.data.error.message || response.statusText));
    });
  };
};
]]></client_script>
